particle_system Engine
{
	material particles      
	particle_width  .1
	particle_height .1
	cull_each       false
	quota           100000
	billboard_type  oriented_self

	// Area emitter
	emitter Point
	{
		angle           10
		emission_rate   10000
		time_to_live_min .5
		time_to_live_max 1
		direction       0 0 1
		velocity       4.0
		colour 1.0 0.0 0.0
	}
	
	// Fader
	affector ColourFader
	{
		red -0.1
		green -0.0
		blue -0.0
	}
}
